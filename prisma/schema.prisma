  deviceType String?
  source     String? // SEARCH_BAR, VOICE, SUGGESTION

  createdAt DateTime @default(now())

  customer Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
  @@index([query])
  @@index([createdAt])
}

// =====================================================
// COMMUNICATION SYSTEM
