  employeeId  String
  action      String
  description String
  entityType  String?
  entityId    String?

  metadata  Json?
  ipAddress String?

  createdAt DateTime @default(now())

  employee Employee @relation(fields: [employeeId], references: [id])

  @@index([employeeId])
  @@index([entityType, entityId])
  @@index([createdAt])
}

