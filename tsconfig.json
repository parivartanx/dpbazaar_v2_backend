{
  "compilerOptions": {
    /* JS version to emit ―― Node 18 supports ES2022 */
    "target": "ES2022",
    /* Use the modern Node module-system */
    "module": "NodeNext",
    "moduleResolution": "node16",

    /* Project structure */
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",

    /* Path aliases (runtime-safe – no "@/…" needed) */
    "paths": {
      "@/*": ["*"]
    },

    /* Strictness & quality */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Build outputs */
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,

    /* Misc */
    "esModuleInterop": true,
    "resolveJsonModule": true
  },

  /* Compile everything under src/ */
  "include": ["src/**/*"],
  /* Ignore generated / test files */
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
